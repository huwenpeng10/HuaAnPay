<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/iv_bootm"
            android:layout_width="500px"
            android:layout_height="240px"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/new_shuakazhifu_01_img" >


            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/huadongview_textmargin"
                android:layout_marginLeft="@dimen/huadongview_textmargin"
                android:textSize="@dimen/huadongview_textsize" />

            <TextView
                android:id="@+id/messge_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="正在连接"
                android:textColor="@color/white"
                android:textSize="@dimen/huadongview_textmaxsize" />


            <ProgressBar
                android:id="@+id/huadong_pro"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/messge_tv"
                android:layout_marginLeft="@dimen/huadongview_textmargin"
                android:padding="30px"/>

        </com.zhy.autolayout.AutoRelativeLayout>

        <ImageView
            android:id="@+id/iv_san_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:src="@mipmap/new_shuaka_dongzuo_img" />

        <ImageView
            android:id="@+id/iv_san_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:src="@mipmap/new_shuaka_dongyou_img" />
    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoRelativeLayout>