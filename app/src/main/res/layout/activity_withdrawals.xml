<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mrxu.main.WithdrawalsActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/titlebar_color">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="40px"
                android:layout_height="@dimen/title_bar_h"
                android:background="@color/titlebar_color">


                <ImageView
                    android:id="@+id/left_Imagemage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"
                    android:src="@mipmap/new_left_icon" />

                <TextView
                    android:id="@+id/title_bar_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:text="主页"
                    android:textSize="@dimen/titlebar_textsize" />

                <TextView
                    android:id="@+id/right_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提现记录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/all_textsize"
                    android:layout_marginRight="20px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />


            </com.zhy.autolayout.AutoRelativeLayout>


        </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bar">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/repl_top_layout"
                android:layout_width="680px"
                android:layout_height="300px"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40px"
                android:background="@mipmap/new_replence_top"
                android:orientation="vertical">


                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/repl_username_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@mipmap/new_shoukuan_yonghu_bth"
                        android:drawablePadding="@dimen/replen_textpadding"
                        android:gravity="center_vertical"
                        android:padding="@dimen/replen_textpadding"
                        android:text="用户"
                        android:textColor="@color/white"
                        android:textSize="@dimen/all_textsize" />


                    <ImageView
                        android:id="@+id/authState_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/replen_margin"
                        android:background="@mipmap/new_zhanghuxinxi_renzheng_img" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="#FFFFFFFF"></View>


                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/user_money_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="￥0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/replen_textsize" />

                    <TextView
                        android:id="@+id/withdraw_state_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="20px"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/all_textsize" />


                    <TextView
                        android:id="@+id/user_money_tv_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:padding="20px"
                        android:text="总资产："
                        android:textColor="@color/white"
                        android:textSize="@dimen/all_textsize" />


                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:padding="20px"
                        android:text="提现到："
                        android:textColor="@color/white"
                        android:textSize="@dimen/all_textsize" />

                    <TextView
                        android:id="@+id/repl_bankNum_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:padding="20px"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/all_maxtextsize" />

                </com.zhy.autolayout.AutoRelativeLayout>


            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/withdrawals_inputmoney_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20px"
                android:layout_below="@+id/repl_top_layout">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="#FF333333"
                    android:textSize="45px"
                    android:layout_centerVertical="true"
                    android:id="@+id/textView7" />

                <EditText
                    android:id="@+id/withdrawals_money_dt"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:paddingLeft="20px"
                    android:drawableBottom="@mipmap/hengxian_icon"
                    android:hint="提现金额"
                    android:inputType="numberDecimal"
                    android:maxLength="7"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/input_kuang_hint_color"
                    android:textSize="@dimen/all_maxtextsize"
                    android:layout_toRightOf="@+id/textView7"
                    android:layout_toEndOf="@+id/textView7" />


            </com.zhy.autolayout.AutoRelativeLayout>


            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/repl_zhong_layout"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_below="@+id/withdrawals_inputmoney_layout">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7天内提现"
                    android:gravity="center_vertical"
                    android:paddingLeft="20px"
                    android:textColor="@color/text_color"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#66666666"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/include2">

                </View>


            </com.zhy.autolayout.AutoRelativeLayout>


            <ListView
                android:id="@+id/withdrawals_sevenDay_LV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/repl_zhong_layout"
                android:layout_above="@+id/userAmout_button">

            </ListView>


            <Button
                android:id="@+id/userAmout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="20px"
                android:background="@drawable/select_button_login"
                android:text="总资产提现"
                android:textColor="@color/white"
                android:textSize="@dimen/all_maxtextsize" />


        </com.zhy.autolayout.AutoRelativeLayout>


        <ProgressBar
            android:id="@+id/withdrawals_pro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:padding="@dimen/login_pro_paddin"
            android:background="@color/pro_color_bg"/>

        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoRelativeLayout>


</RelativeLayout>
