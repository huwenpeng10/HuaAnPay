<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mrxu.main.PhoneReplenishDetailActivity">


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.mrxu.myviews.EleMentTitle
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.example.mrxu.myviews.EleMentTitle>


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title_bar">


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="600px"
                android:layout_height="300px"
                android:layout_below="@+id/title_bar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60px"
                android:background="@mipmap/phone_detail_bg"
                android:paddingTop="20px"
                android:paddingBottom="20px"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#34efefef"
                    android:gravity="center_vertical"
                    android:paddingLeft="20px"
                    android:paddingRight="20px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="话费充值"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/all_textsize"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />


                </com.zhy.autolayout.AutoRelativeLayout>

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="20px"
                        android:paddingRight="20px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="充值号码"
                            android:textColor="@color/white"
                            android:textSize="@dimen/all_textsize" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="18515332180"
                            android:id="@+id/phone_number_tv"
                            android:textColor="@color/white"
                            android:textSize="@dimen/all_textsize" />
                    </com.zhy.autolayout.AutoRelativeLayout>


                    <com.zhy.autolayout.AutoRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#34efefef"
                        android:gravity="center_vertical"
                        android:paddingLeft="20px"
                        android:paddingRight="20px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="充值金额"
                            android:textColor="@color/white"
                            android:textSize="@dimen/all_textsize" />

                        <TextView
                            android:id="@+id/surfaceMoney_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="50元"
                            android:textColor="@color/white"
                            android:textSize="@dimen/all_textsize" />
                    </com.zhy.autolayout.AutoRelativeLayout>


                    <com.zhy.autolayout.AutoRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="20px"
                        android:paddingRight="20px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="实际支付"
                            android:textColor="@color/white"
                            android:textSize="@dimen/all_textsize" />

                        <TextView
                            android:id="@+id/actualMoney_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="50元"
                            android:textColor="@color/white"
                            android:textSize="@dimen/all_textsize" />
                    </com.zhy.autolayout.AutoRelativeLayout>


                    <com.zhy.autolayout.AutoRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#34efefef"
                        android:gravity="center_vertical"
                        android:paddingLeft="20px"
                        android:paddingRight="20px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="支付方式"
                            android:textColor="@color/white"
                            android:textSize="@dimen/all_textsize" />

                        <TextView
                            android:id="@+id/pay_tpye_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="刷卡支付"
                            android:textColor="@color/white"
                            android:textSize="@dimen/all_textsize" />
                    </com.zhy.autolayout.AutoRelativeLayout>

                </com.zhy.autolayout.AutoLinearLayout>


            <Button
                android:id="@+id/detail_but"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="确认"
                android:textSize="@dimen/all_maxtextsize"
                android:textColor="@color/white"
                android:background="@drawable/select_button_login"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"/>



        </com.zhy.autolayout.AutoRelativeLayout>


    </com.zhy.autolayout.AutoRelativeLayout>

</RelativeLayout>
